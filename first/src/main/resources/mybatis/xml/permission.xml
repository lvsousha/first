<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stone.mapper.PermissionDao">

    <resultMap type="com.stone.model.Permission" id="permissionResult">
        <result property="id" column="id" jdbcType="INTEGER" javaType="java.lang.Integer" />
        <result property="permission" column="permission" />
        <result property="description" column="description" />
        <result property="available" column="available" />
		<association property="role" column="role" select="cn.stone.mapper.RoleDao.select"/>
    </resultMap>

    <insert id="insert" parameterType="com.stone.model.Permission">
		insert into permission(
				permission,
				description,
				available,
				role
		) values (
				#{permission,jdbcType=VARCHAR},
				#{description,jdbcType=VARCHAR},
				#{available,jdbcType=VARCHAR},
				<choose>
			    	<when test="role == null">NULL</when>
			    	<otherwise>#{role.id,jdbcType=INTEGER}</otherwise>
			    </choose>
		)
		<selectKey keyProperty="id" resultType="java.lang.Integer" order="AFTER">
			select @@IDENTITY as id
		</selectKey>
	</insert>

    <select id="selectPermissions" resultMap="permissionResult">
        select *
        	from permission
    </select>

    <select id="select" parameterType="int" resultMap="permissionResult">
        select *
        	from permission where id=#{id}
    </select>

    <update id="updatePermission" parameterType="permission">
        update
        	permission set
		        username=#{username},
		        password=#{password}
        	where id=#{id}
    </update>

    <delete id="deletePermission" parameterType="int">
        delete
        	from permission
        	where id=#{id}
    </delete>

</mapper>